#include <iostream>
#include <vector>
using namespace std;
 
int main()
{
  float lat;
  vector<float> lista;
  cout << "Escreva um núemro maior que 1: ";
  cin >> lat;
  float typed = lat+1;
  
  while(typed > lat)
  {
  lat = typed;
  cout << "Escreva um número maior que o digitado anteriormente (" << lat << ") : ";
  cin >> typed;
  lista.push_back(typed);
  for (size_t i = 0; i < lista.size();i++)
    {
    cout << lista[i];
    }
  cout << endl;
  }
  cout << "Verifique o que foi digitado.";
}
